<h1>Sign-in</h1>

<%= form_with model: @customer, :url => url_for(:controller => 'sessions', :action => 'create')do | f |%>

<%= f.label :email %>
<%= f.text_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password%>
<br><br>
<%= f.submit "sign in" %>

<% end %>
<br/>
<hr>
<p><%=link_to "Don't have an account? Create one!", '/customers/new'%></p>

<% flash.each do | key, v | %>
<li style='color: red '> <%= v %> </li>
<%end %>